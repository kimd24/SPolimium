<%#app/views/legislators/index.html.erb%>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2">
      <h1>Legislators</h1>
      <hr>
      <%= simple_form_for :search, url: root_path, method: "GET", html: {class: "form-inline" } do |f| %>
        <%= f.input :name, input_html: {value: ""} %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
      <% @legislators.each do |legislator| %>
        <h3><%= legislator.name %></h3>
        <p><%= link_to 'Show', legislators_path(legislator), class: 'link link--underlined' %></p>
        <p><%= legislator.gender %></p>
        <p><%= legislator.birthday %></p>
      <% end %>
    </div>
  </div>
</div>
